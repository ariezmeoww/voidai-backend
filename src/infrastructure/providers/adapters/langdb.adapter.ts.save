  async chatCompletion(request: ChatCompletionRequest): Promise<ChatCompletionResponse | AsyncIterable<StreamChunk>> {
    const context = this.createRequestContext(LangDBAdapter.CHAT_COMPLETIONS_ENDPOINT, request.model);

    return this.executeWithLogging(context, async () => {
      const langdbRequest = this.transformRequest(request);

      if (request.stream) {
        return this.createChatStream(langdbRequest);
      }

      const response = await this.makeHttpRequest<ChatCompletionResponse>({
        endpoint: LangDBAdapter.CHAT_COMPLETIONS_ENDPOINT,
        method: 'POST',
        body: langdbRequest,
        expectJson: true
      });

      return response as ChatCompletionResponse;
    });
  }

  async textToSpeech(request: SpeechRequest): Promise<ArrayBuffer> {
